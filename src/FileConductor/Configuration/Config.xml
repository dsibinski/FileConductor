<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <databases>
    <database>
      <id>1</id>
      <host>localhost</host>
      <user>admin</user>
      <password>admin</password>
    </database>
  </databases>
  
  <servers>
    <server>
      <id>1</id>
      <protocol>FTP</protocol>
      <ip>10.0.0.1</ip>
      <user>admin</user>
      <password>admin</password>
      <port>22</port>
    </server>
    <server>
      <id>2</id>
      <protocol>Netbios</protocol>
      <ip></ip>
      <user></user>
      <password></password>
      <port></port>
    </server>
  </servers>
  
  <targets>
    <target>
      <name>Interface1_FTP</name>
      <id>1</id>
      <serverId>1</serverId>
      <path>Interfaces/Folder1</path>
    </target>

    <target>
      <name>Interface1_Local</name>
      <id>2</id>
      <serverId>2</serverId>
      <path>C:/Interface1/Import</path>
    </target>
  </targets>

  <schedules>
    <scheduleId>1</scheduleId>
    <interval></interval>
    <daysOfWeek>0;5;6</daysOfWeek>
    <hours>1700</hours>
  </schedules>
  
  <watchers>
    <watcher>
      <name>Interface1_FTP_Importer</name>
      <id>1</id>
      <databaseId>1</databaseId>
      <watcherTargets>
        <sourceTargetId>1</sourceTargetId>
        <destinationTargetId>2</destinationTargetId>
      </watcherTargets>
      <scheduleId>1</scheduleId>
    </watcher>
    
    <watcher>
      <name>Interface1_FTP_Exporter</name>
      <id>2</id>
      <databaseId>1</databaseId>
      <inteval>10s</inteval>
      <watcherTargets>
        <sourceTargetId>2</sourceTargetId>
        <destinationTargetId>1</destinationTargetId>
      </watcherTargets>
      <scheduleId>1</scheduleId>
    </watcher>
    
  </watchers>
  
</configuration>
