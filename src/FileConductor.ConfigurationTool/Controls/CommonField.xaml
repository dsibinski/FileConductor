<UserControl  x:Class="ConfigurationTool.Controls.CommonField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="CustomField">
    <StackPanel Height="30" Width="200" DockPanel.Dock ="Top" Orientation="Horizontal" Margin="5">
        <Label   Content="{Binding ElementName=CustomField, Path=Text}"></Label>
        <TextBox Width ="100" Text="{Binding ElementName=CustomField,Path= Value}"></TextBox>
    </StackPanel>

</UserControl>
