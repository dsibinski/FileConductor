<UserControl x:Class="ConfigurationTool.Controls.ComboBoxWithFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfigurationTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="30" Margin="5">
    <WrapPanel Orientation="Horizontal">
        <local:CommonComboBox Text="Source path :" SelectedItem="{Binding Watcher.Source}" ItemSource="{Binding Configuration.Targets}" DisplayedProperty="Code"></local:CommonComboBox>
        <Button Content="Edit" Margin="5"></Button>
        <GroupBox>
            <WrapPanel Orientation="Horizontal">
                <Label FontStyle="Italic" Content="path: "></Label>
                <TextBox  Margin="5" IsReadOnly="True" Text="{Binding Watcher.Source.Path}"></TextBox>
                <Label FontStyle="Italic" Content="protocol: "></Label>
                <TextBox  Margin="5" IsReadOnly="True" Text="{Binding Watcher.SourceServerData.Protocol}"></TextBox>
            </WrapPanel>
        </GroupBox>
    </WrapPanel>
</UserControl>

