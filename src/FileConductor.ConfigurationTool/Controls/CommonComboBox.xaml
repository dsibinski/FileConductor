<UserControl x:Class="ConfigurationTool.Controls.CommonComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfigurationTool.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="CustomComboBox">
    <StackPanel Height="30" Width="200" DockPanel.Dock ="Top" Orientation="Horizontal" Margin="5">
        <Label Margin="0,0,10,0"  Content="{Binding ElementName=CustomComboBox, Path=Text}"></Label>
        <ComboBox Margin="10,0,0,0" Width ="100" DisplayMemberPath="{Binding ElementName=CustomComboBox, Path=DisplayedProperty}" ItemsSource="{Binding ElementName=CustomComboBox, Path=ItemSource}"  SelectedItem="{Binding ElementName=CustomComboBox,Path=SelectedItem}"></ComboBox>
    </StackPanel>
</UserControl>
