<UserControl x:Class="ConfigurationTool.Controls.NavigationFields"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConfigurationTool.Controls"
             mc:Ignorable="d">
    <Grid>
            <WrapPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Save" Margin="5" Command="{Binding SaveCommand}"></Button>
                <Button Content="Exit" Margin="5" Command="{Binding CloseCommand}"></Button>
            </WrapPanel>
    </Grid>
</UserControl>
